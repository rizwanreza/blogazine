- title "Posts"

%table
  %tr
    %th Title
    %th Slug
    %th Summary
    %th Sass
    %th Published
  - for post in @posts
    %tr
      %td= h post.title
      %td= h post.slug
      %td= h post.summary
      %td= h post.sass
      %td= h post.published
      %td= link_to 'Show', admin_post_path(post)
      %td= link_to 'Edit', edit_admin_post_path(post)
      %td= link_to 'Destroy', admin_post_path(post), :confirm => 'Are you sure?', :method => :delete

%p= link_to "New Post", new_admin_post_path
